#registartion-wrapper
	width 100%
	height 100%
	display flex
	flex-direction column
	justify-content center
	align-items center
	padding 0 10%
	input
		flex 0 0 40px
		margin 10px 0
		border 2px solid gray
		width 40%
		padding-left 1%
	button
		margin 10px 0
		background-color #3a923a
		color white
		font-weight 900
		width 20%
		height 40px
		letter-spacing 1px
		border none