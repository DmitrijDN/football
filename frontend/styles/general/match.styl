.matches-wrapper
.counter-handler-wrapper
	h2
		text-align center
	.table
		.data
			.multi-rows-item
				.row-item
					padding-left 0 !important
					display flex
					flex-direction column !important
					.high-row
						// flex 0 0 200px
						width 100%
					.small-row
						flex 0 0 40px
						display flex
						flex-direction row
						width 100%
						height 40px
						&:hover
							background-color #D6EBF2 !important
							cursor pointer
						.small-col
							display flex
							align-items center
							padding-left 5px
			.big-col
				display flex
				flex-direction row
				.teamA
				.teamB
					flex 3
					display flex
					align-items center
				.teamA
					justify-content flex-end
					margin-right 5px
				.teamB
					justify-content flex-start
					margin-left 5px
				.teamA-score
				.teamB-score
					display flex
					align-items center
					justify-content center
					flex 0 0 30px
					input
						text-align center
						width 30px
						margin 0
						font-weight 700
						border none
						background-color transparent
						&:focus
							border 2px solid gray
				.separator
					flex 0 0 10px
					display flex
					flex-direction row
					justify-content center
					align-items center
					font-weight 700
			.high-row
				display flex
				flex-direction column
				.team-details-data
					flex 0 0 30px
					.team-item
						label
							margin-right 10px
					