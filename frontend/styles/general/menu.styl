header
	width 100%
	height 50px
	border 0
	position absolute
	top 0
	left 0
	nav
		display flex
		flex-direction row
		height 100%
		background-color #565656
		.logo
			img 
				height 50px
				cursor pointer
		.menu-items
			flex 5 0 0
			display flex
			flex-direction row
			align-items center
			font-weight 700
			ul
				height 50px
				list-style-type: none;
				flex 1
				display flex
				flex-direction row
				height 100%
				margin 0
				padding 0
				color white
				li
					height 50px
					cursor pointer
					display flex
					align-items center
					justify-content center
					flex 1 0 0
					&:not(:last-child)
						border-right 1px solid white
					ul
						color white
						background-color #565656
						height 100px
						width 100%
						border-top-left-radius 0
						border-top-right-radius 0
						display flex
						flex-direction column
						align-items flex-start
						justify-content flex-start
						li
							flex 0 0 32px
							display flex
							justify-content flex-start
							align-items flex-start
							width 100%
							margin-left 15px
							cursor pointer
							font-weight 200
							border 0 !important
							&:first-child
								margin-top 10px
							&:hover
								font-weight 700
				li.active
					background-color #333