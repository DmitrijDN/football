body
	font-size medium
	#main
		position absolute
		width 100%
		height calc(100% - 50px)
		margin-top 50px
		top 0
		left 0
		#main-content
			position relative
			width 70%
			margin 0 15%
			i.fa.fa-plus-circle
			i.fa.fa-remove
				cursor pointer
.noselect
	-webkit-touch-callout none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none
.default-btn
	width 150px
	height 35px
	background-color #47ad70
	color white
	font-weight 900
	cursor pointer
	display flex
	justify-content center
	align-items center
	-webkit-touch-callout none
	-webkit-user-select none
	-khtml-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none
	&:active
		background-color green
input[type="checkbox"]
	height  20px
	width 20px
	font  14px/26px 'pt-sans', 'Helvetica Neue', Arial, Helvetica, Geneva, sans-serif 
	padding 7px 7px 7px 12px 
	margin 0 !important
	background #FFF 
	border 1px solid #cdcdcd 
	outline none 
	color #96999D 
	-webkit-box-shadow  0 1px 2px rgba(0, 0, 0, 0.1) 
	   -moz-box-shadow  0 1px 2px rgba(0, 0, 0, 0.1) 
			box-shadow  0 1px 2px rgba(0, 0, 0, 0.1)         
	-webkit-appearance  none 
	-webkit-font-smoothing  antialiased
	-webkit-transition  all 0.15s 
	   -moz-transition  all 0.15s 
		-ms-transition  all 0.15s 
		 -o-transition  all 0.15s 
			transition  all 0.15s domize-checkbox
input[type='checkbox']:focus
	color: #2E3236;
	outline none
input[type='checkbox']:checked
	background white
	position relative
	border-color #2e6da4
	outline none
input[type='checkbox']:checked:before
	content 'âœ”'
	color #337ab7
	width 5px
	height 6px
	position absolute
	top 1px
	left 3px
	outline none
input[type='checkbox']:active
	outline none
.with-checkbox
	display inline-block
	label
		display flex
		cursor pointer
		span 
			margin-left 10px
.table
	display flex
	flex-direction column
	border 1px solid gray
	.row-item.header
		font-weight 700
		background-color white
		border-bottom 1px solid gray
	.row-item
		flex 0 0 40px
		min-height 40px
		display flex
		flex-direction row
		align-items center
		padding-left 5px
		.small-col
			flex 1 0 0
		.medium-col
			flex 2 0 0
		.big-col
			flex 3 0 0
		.very-big-col
			flex 4 0 0
		.control-col.right-aligned
			flex 0 0 30px
			text-align right
			margin-right 5px
			display flex
			align-items center
		&:nth-child(even)
			background-color #ddd
		&:nth-child(even)
			background-color lightgray