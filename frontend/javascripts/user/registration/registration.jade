#registartion-wrapper
	input(type="text" ng-model="$ctrl.user.firstName" placeholder="First Name")
	input(type="text" ng-model="$ctrl.user.lastName" placeholder="Last Name")
	input(type="email" ng-model="$ctrl.user.email" placeholder="Email")
	input(type="password" ng-model="$ctrl.user.password" placeholder="Password")
	button(ng-click="$ctrl.register($ctrl.user)") Register